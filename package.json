{
  "name": "vote-europa",
  "version": "1.0.0",
  "description": "A Voting Platform Managed via a REST API",
  "main": "src/index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src",
    "lint-fix": "./node_modules/.bin/eslint src --fix",
    "start": "node .",
    "debug": "./node_modules/nodemon/bin/nodemon.js --expose-gc --inspect=0.0.0.0:9999 .",
    "check-coverage": "nyc check-coverage --lines 90 --functions 90 --branches 90",
    "test": "npm run lint && nyc mocha test --reporter nyan --recursive --exit && npm run check-coverage && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ActEuropa/VoteEuropa.git"
  },
  "author": "ActEuropa developers team",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/ActEuropa/VoteEuropa/issues"
  },
  "dependencies": {
    "express": "4.16.4",
    "express-swagger-generator": "1.1.13",
    "bunyan": "1.8.12"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "codecov": "^3.2.0",
    "nyc": "13.3.0",
    "mocha": "^6.0.1",
    "sinon": "^7.2.4",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "nock": "^10.0.6",
    "nodemon": "^1.18.10",
    "supertest": "^3.4.2"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "**/test/**",
      "**/coverage/**",
      "**/node_modules/**",
      "**/src/lib/logs.js"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ],
    "all": true
  },
  "homepage": "https://github.com/ActEuropa/VotingPlatformApi#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
